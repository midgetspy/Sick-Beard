    <td align="center">#if int($epResult["airdate"]) == 1 then "never" else $datetime.date.fromordinal(int($epResult["airdate"]))#</td>
    <td>$os.path.basename($epResult["location"])</td>
    <td>$statusStrings[int($epResult["status"])]</td>
    <td align="center">
